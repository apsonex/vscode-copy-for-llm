{
  "name": "copy-code-for-llm",
  "publisher": "apsonex",
  "displayName": "Copy Code For LLM",
  "description": "Copy files/folders formatted for LLM input directly to clipboard",
  "version": "0.0.7",
  "repository": {
    "type": "git",
    "url": "https://github.com/apsonex/vscode-copy-for-llm.git"
  },
  "engines": {
    "vscode": "^1.108.0"
  },
  "main": "./extension.js",
  "activationEvents": [
    "onCommand:copy-code-for-llm.copyFiles",
    "onCommand:copy-code-for-llm.openSelection"
  ],
  "categories": [
    "Other"
  ],
  "scripts": {
    "package": "vsce package",
    "lint": "eslint .",
    "pretest": "pnpm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "~22.19.7",
    "@types/vscode": "^1.108.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "sinon": "^21.0.1"
  },
  "icon": "images/icon.png",
  "contributes": {
    "commands": [
      {
        "command": "copy-code-for-llm.copyFiles",
        "title": "Copy: LLM",
        "icon": "$(clippy)"
      },
      {
        "command": "copy-code-for-llm.openSelection",
        "title": "Copy: To ChatGPT",
        "icon": "$(chat)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "copy-code-for-llm.copyFiles",
          "title": "Copy: LLM"
        }
      ],
      "editor/context": [
        {
          "command": "copy-code-for-llm.openSelection",
          "title": "Copy: To ChatGPT",
          "when": "editorHasSelection",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "copy-code-for-llm.copyFiles"
        },
        {
          "command": "copy-code-for-llm.openSelection"
        }
      ]
    },
    "configuration": {
      "title": "Copy Code For LLM",
      "properties": {
        "copyCodeForLLM.binaryExtensions": {
          "type": "array",
          "default": [
            ".png",
            ".jpg",
            ".jpeg",
            ".gif",
            ".bmp",
            ".webp",
            ".svg",
            ".ico",
            ".tif",
            ".tiff",
            ".pdf",
            ".doc",
            ".docx",
            ".xls",
            ".xlsx",
            ".ppt",
            ".pptx",
            ".zip",
            ".rar",
            ".7z",
            ".tar",
            ".gz",
            ".bz2",
            ".exe",
            ".dll",
            ".so",
            ".dylib",
            ".bin",
            ".dat",
            ".db",
            ".mp3",
            ".mp4",
            ".avi",
            ".mov",
            ".mkv",
            ".wav",
            ".flac",
            ".ttf",
            ".otf",
            ".woff",
            ".woff2",
            ".eot"
          ],
          "items": {
            "type": "string"
          },
          "description": "File extensions to treat as binary/media (path only copied, not content). Include the dot (e.g., '.png').",
          "markdownDescription": "File extensions to treat as **binary/media** â€” only the path and size will be copied, not the content. Useful for images, PDFs, fonts, archives, etc."
        }
      }
    }
  }
}
