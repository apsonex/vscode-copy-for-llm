{
  "name": "copy-code-for-llm",
  "publisher": "apsonex",
  "displayName": "Copy Code For LLM",
  "description": "Copy files/folders formatted for LLM input directly to clipboard",
  "version": "0.0.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/apsonex/vscode-copy-for-llm.git"
  },
  "engines": {
    "vscode": "^1.108.0"
  },
  "main": "./extension.js",
  "activationEvents": [
    "onCommand:copy-code-for-llm.copyFiles",
    "onCommand:copy-code-for-llm.openSelection"
  ],
  "categories": [
    "Other"
  ],
  "scripts": {
    "package": "pnpm vsce package",
    "lint": "eslint .",
    "pretest": "pnpm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "~22.19.6",
    "@types/vscode": "^1.108.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "sinon": "^21.0.1"
  },
  "contributes": {
    "commands": [
      {
        "command": "copy-code-for-llm.copyFiles",
        "title": "Copy-for-LLM: Copy Files for LLM"
      },
      {
        "command": "copy-code-for-llm.openSelection",
        "title": "Copy-for-LLM: Open Selected Code in ChatGPT"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "copy-code-for-llm.copyFiles",
          "title": "Copy-for-LLM: Copy Files for LLM"
        },
        {
          "command": "copy-code-for-llm.openSelection",
          "title": "Copy-for-LLM: Open Selected Code in ChatGPT"
        }
      ],
      "commandPalette": [
        {
          "command": "copy-code-for-llm.copyFiles"
        },
        {
          "command": "copy-code-for-llm.openSelection"
        }
      ]
    }
  }
}
